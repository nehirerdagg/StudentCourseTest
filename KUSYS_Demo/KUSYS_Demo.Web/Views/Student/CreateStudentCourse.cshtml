@using KUSYS_DEMO.Web.Models
<head>
    <link rel="stylesheet" href="~/css/style.css" />
</head>
@{
    ViewData["Title"] = "Öğrenci Ekle";
}


@model ViewModel
<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

<div class="container">
   @*öğrenciye ders atama *@
  <h2>Ders Ekle</h2>
    @using (Html.BeginForm("Editing_CreateStudentCourse", "Student", FormMethod.Post, new{ @class="form-horizontal"} ))
    {
        @*Öğrencinin Id'sini Controller'a viewBag kullanarak yolluyoruz*@

          @Html.Hidden("studentCourses.StudentId", (object)@ViewBag.StudentID)
          <input type="hidden"  name="studentCourses.StudentId" value=@ViewBag.StudentID>
        
        <div class="form-group">
          <label class="control-label col-sm-2" for="fname">Ders Adı:</label>
          <div class="col-sm-10">
            @Html.DropDownListFor(model => model.studentCourses.Course.Id, new SelectList(Model.Coursess, "Id", "CourseName" ), new{ @class="btn btn-primary dropdown-toggle"}  )
          </div>
        </div>
   
  
        <div class="form-group">        
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">Ekle</button>
          </div>
        </div>
    }
</div>

</body>
</html>

